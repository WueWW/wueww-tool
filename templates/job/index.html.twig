{% extends 'base.html.twig' %}

{% block body %}
    {{ include('job/_orgdata_missing_info.html.twig') }}

    <h1>Job-Liste</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titel</th>
            <th>Freigabe</th>
            <th>Aktionen</th>
        </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.proposedDetails.title }}</td>
                <td>
                    {% if job.accepted %}
                        <i class="fa fa-check" title="freigegeben"></i>
                    {% else %}
                        <i class="fa fa-hourglass-2" title="warten auf Freigabe"></i>
                    {% endif %}
                </td>
                <td class="job-actions">
                    <a class="btn btn-outline-secondary btn-sm" title="anzeigen"
                       href="{{ path('job_show', {'id': job.id}) }}"><i class="fa fa-eye"></i></a>
                    <a class="btn btn-outline-secondary btn-sm" title="bearbeiten"
                       href="{{ path('job_edit', {'id': job.id}) }}"><i class="fa fa-pencil"></i></a>
                    {{ include('job/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Keine Jobs gefunden.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if not is_granted('ROLE_EDITOR') %}
        <a class="btn btn-success" href="{{ path('job_new') }}">Neuen Job vorschlagen</a>
    {% endif %}
{% endblock %}
